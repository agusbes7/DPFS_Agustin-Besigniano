        <option value="" disabled selected>Tipo de Producto</option>
        <option value="1">Juego</option>
        <option value="2">Libro</option>
        <option value="3">Artículo</option>
    </select>
</div>

  <div class="Juego p-2">
    <!-- Grupo de Duración y Edad -->
    <div class="input-group mb-2 w-50">
        <input type="number" class="form-control text-center" placeholder="Duración (min)" aria-label="Duración en minutos" min="1" required>
        <input type="number" class="form-control text-center" placeholder="Edad mínima" aria-label="Edad mínima" min="1" max="200" required>
        <span class="input-group-text">+</span>
    </div>

    <!-- Grupo de Jugadores -->
    <div class="mb-2 text-center w-50">
        <label class="form-label">Jugadores</label>
        <div class="d-flex justify-content-center gap-2">
            <input type="number" id="minPlayers" class="form-control text-center w-50" min="1" placeholder="Mín." required>
            <input type="number" id="maxPlayers" class="form-control text-center w-50" min="1" placeholder="Máx." required>
        </div>
    </div>
</div>

  
    <div class="Libro">
      <div class="input-group mb-3">
